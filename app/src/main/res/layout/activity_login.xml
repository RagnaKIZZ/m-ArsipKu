<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.LoginActivity"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/_35sdp"
        android:focusable="false"
        android:focusableInTouchMode="true">


        <ImageView
            android:id="@+id/foto_login"
            android:transitionName="@string/splash"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:layout_gravity="center"
            android:src="@drawable/arsipku3"
            android:textColor="@android:color/black"
            android:layout_marginBottom="@dimen/_5sdp"/>
        <ImageView
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/arsipkuasd"
            android:layout_gravity="center"/>

        <View
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_5sdp"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="@dimen/_70sdp"/>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:maxLines="1">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:id="@+id/user"
                android:inputType="text"
                android:imeOptions="actionNext"/>
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/wrong_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username Salah!"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="@android:color/holo_red_light"/>

        <android.support.design.widget.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/colorPrimary">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1" />
        </android.support.design.widget.TextInputLayout>
        <TextView
            android:id="@+id/wrong_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password Salah!"
            android:visibility="gone"
            tools:visibility="visible"
            android:textColor="@android:color/holo_red_light"/>

        <Button
            android:textColor="#ffff"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:id="@+id/login"
            android:text="Masuk"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_12ssp"
            android:background="@drawable/background_button_ganti"
            android:elevation="@dimen/_2sdp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright \u00A9 AirNav Indonesia 2019"
            android:layout_gravity="center"
            android:textSize="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_15sdp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>