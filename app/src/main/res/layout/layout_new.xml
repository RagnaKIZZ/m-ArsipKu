<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".Main.MainActivity"
    android:fitsSystemWindows="true"

    android:background="@android:color/white"
    android:orientation="vertical">
    <com.xw.repo.widget.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="0dp">
                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/white"
                    android:id="@+id/toolbar"
                    app:titleTextColor="@android:color/black"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
            </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                app:cardElevation="@dimen/_5sdp"
                app:cardPreventCornerOverlap="false">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/img_days"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        tools:src="@drawable/pagi"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/_12sdp">
                        <TextView
                            android:id="@+id/txt_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Good Morning"
                            android:textSize="@dimen/_20ssp"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rusdani"
                            android:maxLength="20"
                            android:textSize="@dimen/_15ssp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                </FrameLayout>

            </android.support.v7.widget.CardView>
            <TextView
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_8sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_2sdp"

                android:text="Menu"
                android:textSize="@dimen/_13ssp"
                android:textColor="@android:color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="@dimen/_5sdp">
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_daftar_nomor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_2sdp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true">
                    <LinearLayout
                        android:gravity="left"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <android.support.v7.widget.CardView
                            android:layout_width="@dimen/_40sdp"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_margin="@dimen/_5sdp"
                            app:cardCornerRadius="@dimen/_10sdp"
                            app:cardElevation="@dimen/_2sdp"
                            android:backgroundTint="@android:color/holo_green_dark"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true">
                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@drawable/ic_format_list_numbered_black_24dp"
                                android:layout_margin="@dimen/_5sdp"/>
                        </android.support.v7.widget.CardView>
                        <TextView
                            android:layout_gravity="center_vertical"
                            android:text="Daftar Nomor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_4sdp"
                    android:background="@android:color/white"
                    app:cardPreventCornerOverlap="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_5sdp">
                        <TextView
                            android:layout_gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:text="Surat Dinas"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@android:color/black"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:gravity="left|top">

                        <LinearLayout
                            android:id="@+id/cv_kotak_surat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_5sdp">
                            <android.support.v7.widget.CardView

                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="@dimen/_2sdp"
                                android:backgroundTint="@android:color/holo_blue_dark"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true">
                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_mail_black_24dp"
                                    android:layout_margin="@dimen/_5sdp"/>

                            </android.support.v7.widget.CardView>
                            <TextView
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Kotak Masuk"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@android:color/darker_gray"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cv_terkirim_surat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_5sdp">
                            <android.support.v7.widget.CardView

                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="@dimen/_2sdp"
                                android:backgroundTint="@android:color/holo_purple"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true">
                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_send_black_24dp"
                                    android:layout_margin="@dimen/_5sdp"/>

                            </android.support.v7.widget.CardView>
                            <TextView
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Terkirim"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@android:color/darker_gray"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cv_dispos_masuk_surat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_5sdp">
                            <android.support.v7.widget.CardView

                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="@dimen/_2sdp"
                                android:backgroundTint="@android:color/holo_red_dark"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true">
                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_arrow_downward_black_24dp"
                                    android:layout_margin="@dimen/_5sdp"/>

                            </android.support.v7.widget.CardView>
                            <TextView
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Disposisi Masuk"
                                android:layout_width="@dimen/_42sdp"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@android:color/darker_gray"/>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cv_dispos_keluar_surat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_5sdp">
                            <android.support.v7.widget.CardView

                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_margin="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="@dimen/_2sdp"
                                android:backgroundTint="@android:color/holo_orange_dark"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true">
                                <ImageView
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_arrow_upward_black_24dp"
                                    android:layout_margin="@dimen/_5sdp"/>

                            </android.support.v7.widget.CardView>
                            <TextView
                                android:textAlignment="center"
                                android:layout_gravity="center_horizontal"
                                android:text="Disposisi Keluar"
                                android:layout_width="@dimen/_42sdp"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_10ssp"
                                android:textColor="@android:color/darker_gray"/>
                        </LinearLayout>

                    </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_4sdp"
                    android:background="@android:color/white"
                    app:cardPreventCornerOverlap="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_5sdp">
                        <TextView
                            android:layout_gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:text="Nota Dinas"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@android:color/black"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:gravity="left|top">

                            <LinearLayout
                                android:id="@+id/cv_kotak_nota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="@dimen/_5sdp">
                                <android.support.v7.widget.CardView

                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_10sdp"
                                    app:cardElevation="@dimen/_2sdp"
                                    android:backgroundTint="@android:color/holo_blue_dark"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true">
                                    <ImageView
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_mail_black_24dp"
                                        android:layout_margin="@dimen/_5sdp"/>

                                </android.support.v7.widget.CardView>
                                <TextView
                                    android:textAlignment="center"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Kotak Masuk"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@android:color/darker_gray"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cv_terkirim_nota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:orientation="vertical">

                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:backgroundTint="@android:color/holo_purple"
                                    android:clickable="true"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    app:cardCornerRadius="@dimen/_10sdp"
                                    app:cardElevation="@dimen/_2sdp">

                                    <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_margin="@dimen/_5sdp"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_send_black_24dp" />

                                </android.support.v7.widget.CardView>

                                <TextView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Terkirim"
                                    android:textAlignment="center"
                                    android:textColor="@android:color/darker_gray"
                                    android:textSize="@dimen/_10ssp" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cv_dispos_masuk_nota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="@dimen/_5sdp">
                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_10sdp"
                                    app:cardElevation="@dimen/_2sdp"
                                    android:backgroundTint="@android:color/holo_red_dark"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true">
                                    <ImageView
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_arrow_downward_black_24dp"
                                        android:layout_margin="@dimen/_5sdp"/>

                                </android.support.v7.widget.CardView>
                                <TextView
                                    android:textAlignment="center"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Disposisi Masuk"
                                    android:layout_width="@dimen/_42sdp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@android:color/darker_gray"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cv_dispos_keluar_nota"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="@dimen/_5sdp">
                                <android.support.v7.widget.CardView

                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_10sdp"
                                    app:cardElevation="@dimen/_2sdp"
                                    android:backgroundTint="@android:color/holo_orange_dark"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true">
                                    <ImageView
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_arrow_upward_black_24dp"
                                        android:layout_margin="@dimen/_5sdp"/>

                                </android.support.v7.widget.CardView>
                                <TextView
                                    android:textAlignment="center"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Disposisi Keluar"
                                    android:layout_width="@dimen/_42sdp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@android:color/darker_gray"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cv_memo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_15sdp"
                    app:cardElevation="@dimen/_4sdp"
                    android:background="@android:color/white"
                    app:cardPreventCornerOverlap="false">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_5sdp">
                        <TextView
                            android:layout_gravity="left"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_15sdp"
                            android:text="Memo"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@android:color/black"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:gravity="left|top">

                            <LinearLayout
                                android:id="@+id/cv_kotak_memo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="@dimen/_5sdp">
                                <android.support.v7.widget.CardView

                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_10sdp"
                                    app:cardElevation="@dimen/_2sdp"
                                    android:backgroundTint="@android:color/holo_blue_dark"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true">
                                    <ImageView
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_mail_black_24dp"
                                        android:layout_margin="@dimen/_5sdp"/>

                                </android.support.v7.widget.CardView>
                                <TextView
                                    android:textAlignment="center"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Kotak Masuk"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@android:color/darker_gray"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/cv_terkirim_memo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="@dimen/_5sdp">
                                <android.support.v7.widget.CardView

                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="@dimen/_40sdp"
                                    android:layout_margin="@dimen/_5sdp"
                                    app:cardCornerRadius="@dimen/_10sdp"
                                    app:cardElevation="@dimen/_2sdp"
                                    android:backgroundTint="@android:color/holo_purple"
                                    android:foreground="?android:attr/selectableItemBackground"
                                    android:clickable="true">
                                    <ImageView
                                        android:layout_gravity="center_horizontal"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_send_black_24dp"
                                        android:layout_margin="@dimen/_5sdp"/>

                                </android.support.v7.widget.CardView>
                                <TextView
                                    android:textAlignment="center"
                                    android:layout_gravity="center_horizontal"
                                    android:text="Terkirim"
                                    android:layout_width="@dimen/_40sdp"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_10ssp"
                                    android:textColor="@android:color/darker_gray"/>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>


        </LinearLayout>
    </com.xw.repo.widget.BounceScrollView>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/menu_drawer"/>
</android.support.v4.widget.DrawerLayout>