<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainActivity"
    android:background="@android:color/white"
    android:orientation="vertical">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <android.support.design.widget.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.AppBarOverlay"
                app:elevation="0dp">
                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/white"
                    android:id="@+id/toolbar"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
            </android.support.design.widget.AppBarLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:layout_gravity="center"
               android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_40sdp"
                app:cardElevation="@dimen/_5sdp"
                app:cardPreventCornerOverlap="false">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:adjustViewBounds="true"
                        android:src="@mipmap/ic_launcher"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_margin="@dimen/_12sdp">
                        <TextView
                            android:id="@+id/txt_msg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Good Morning"
                            android:textSize="@dimen/_20ssp"
                            android:textColor="@android:color/white"/>
                        <TextView
                            android:id="@+id/txt_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rusdani"
                            android:textSize="@dimen/_20ssp"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                </FrameLayout>

            </android.support.v7.widget.CardView>
            <TextView
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Jabatan"
                android:textSize="@dimen/_13ssp"
                android:textColor="@android:color/black"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardCornerRadius="@dimen/_15sdp"
                app:cardElevation="@dimen/_4sdp"
                android:background="@android:color/white"
                app:cardPreventCornerOverlap="false">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp">
                    <Button
                        android:id="@+id/btn_jab1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jabatan 1"
                        android:layout_margin="@dimen/_5sdp"
                        android:elevation="@dimen/_3sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bc_btn_jab1"/>
                    <Button
                        android:id="@+id/btn_jab2"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jabatan 2"
                        android:elevation="@dimen/_3sdp"
                        android:textSize="@dimen/_10sdp"
                        android:background="@drawable/bc_btn_jab2"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <TextView
                android:layout_gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Menu"
                android:textSize="@dimen/_13ssp"
                android:textColor="@android:color/black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_5sdp">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_10sdp"
                        app:cardElevation="@dimen/_2sdp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:gravity="left"
                            android:layout_margin="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:src="@mipmap/ic_launcher"
                                android:layout_margin="@dimen/_5sdp"/>
                            <TextView
                                android:layout_gravity="center_vertical"
                                android:text="Daftar Nomor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_10sdp"
                                android:textColor="@android:color/black"/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        app:cardCornerRadius="@dimen/_15sdp"
                        app:cardElevation="@dimen/_4sdp"
                        android:background="@android:color/white"
                        app:cardPreventCornerOverlap="false">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_5sdp">
                            <TextView
                                android:layout_gravity="left"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_15sdp"
                                android:layout_marginRight="@dimen/_15sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:text="Surat Dinas"
                                android:textSize="@dimen/_12ssp"
                                android:textColor="@android:color/black"/>


                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="@dimen/_2sdp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true">
                                <LinearLayout
                                    android:gravity="left"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@mipmap/ic_launcher"
                                        android:layout_margin="@dimen/_5sdp"/>
                                    <TextView
                                        android:layout_gravity="center_vertical"
                                        android:text="Kotak Masuk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:textColor="@android:color/black"/>
                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="@dimen/_2sdp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true">
                                <LinearLayout
                                    android:gravity="left"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@mipmap/ic_launcher"
                                        android:layout_margin="@dimen/_5sdp"/>
                                    <TextView
                                        android:layout_gravity="center_vertical"
                                        android:text="Terkirim"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:textColor="@android:color/black"/>
                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="@dimen/_2sdp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true">
                                <LinearLayout
                                    android:gravity="left"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@mipmap/ic_launcher"
                                        android:layout_margin="@dimen/_5sdp"/>
                                    <TextView
                                        android:layout_gravity="center_vertical"
                                        android:text="Disposisi Masuk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:textColor="@android:color/black"/>
                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                            <android.support.v7.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                app:cardCornerRadius="@dimen/_10sdp"
                                app:cardElevation="@dimen/_2sdp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:clickable="true">
                                <LinearLayout
                                    android:gravity="left"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="@dimen/_30sdp"
                                        android:layout_height="@dimen/_30sdp"
                                        android:src="@mipmap/ic_launcher"
                                        android:layout_margin="@dimen/_5sdp"/>
                                    <TextView
                                        android:layout_gravity="center_vertical"
                                        android:text="Disposisi Keluar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="@dimen/_10sdp"
                                        android:textColor="@android:color/black"/>
                                </LinearLayout>

                            </android.support.v7.widget.CardView>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>




                </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.v4.widget.DrawerLayout>