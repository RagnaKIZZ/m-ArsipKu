<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingRight="@dimen/_10sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingTop="@dimen/_5sdp"
    android:id="@+id/container_item">

    <View
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/item_txt_stts"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/item_txt_title"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_12sdp"
        tools:text="Nomor Surat" />

    <TextView
        android:textStyle="bold"
        android:maxLength="25"
        android:id="@+id/item_txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_txt_title"
        android:layout_marginTop="@dimen/_5sdp"
        android:maxLines="1"
        android:textColor="#727272"
        android:textSize="@dimen/_12sdp"
        tools:text="Teruntuk/Dari" />


    <TextView
        android:id="@+id/item_txt_tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/_10sdp"
        android:textStyle="bold"
        tools:text="dd/mm" />

    <TextView
        android:textStyle="italic"
        android:layout_alignParentRight="true"
        android:id="@+id/item_txt_stts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_txt_tanggal"
        android:layout_marginTop="@dimen/_5sdp"
        android:maxLines="1"
        android:maxLength="25"
        android:textColor="#727272"
        android:textSize="@dimen/_10sdp"
        tools:text="Perihal" />



</RelativeLayout>